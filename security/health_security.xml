<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Health Officer Group -->
    <record id="group_health_officer" model="res.groups">
        <field name="name">Health Officer</field>
        <field name="category_id" ref="base.module_category_human_resources_employees"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="comment">Health Officers can manage all health-related information</field>
    </record>
    
    <!-- Medical Data Privacy Rules -->

    <!-- Health Info Privacy Rule (Normal Users) -->
    <record id="hr_employee_health_privacy_rule" model="ir.rule">
        <field name="name">Employee Health Information Privacy</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[
            '|',
            ('id', '=', user.employee_id.id),
            ('user_id', '=', user.id)
        ]</field>
        <!-- Restrict visibility to HR Manager + Health Officer -->
        <field name="groups" eval="[(4, ref('hr.group_hr_manager')), (4, ref('employee_health_information.group_health_officer'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Admin Access Rule for hr.employee -->
    <record id="hr_employee_admin_access" model="ir.rule">
        <field name="name">Employee Health Info Admin Access</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Medical History Privacy Rule (Normal Users) -->
    <record id="medical_history_privacy_rule" model="ir.rule">
        <field name="name">Medical History Privacy Rule</field>
        <field name="model_id" ref="model_hr_employee_medical_history"/>
        <field name="domain_force">[
            ('employee_id.user_id', '=', user.id)
        ]</field>
        <!-- Restrict to HR Manager + Health Officer -->
        <field name="groups" eval="[(4, ref('hr.group_hr_manager')), (4, ref('employee_health_information.group_health_officer'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Admin Access Rule for hr.employee.medical.history -->
    <record id="medical_history_admin_access" model="ir.rule">
        <field name="name">Medical History Admin Access</field>
        <field name="model_id" ref="model_hr_employee_medical_history"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
