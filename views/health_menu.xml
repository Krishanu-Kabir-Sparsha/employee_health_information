<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Health Menu under Employees -->
    <menuitem id="menu_hr_health_root" 
              name="Health Management" 
              parent="hr.menu_hr_root" 
              sequence="5"
              groups="hr.group_hr_user"/>
    
    <!-- Health Dashboard Action -->
    <!-- <record id="action_health_dashboard" model="ir.actions.client">
        <field name="name">Health Dashboard</field>
        <field name="tag">hr_health_dashboard</field>
    </record> -->
    
    <!-- Medical History Action -->
    <record id="action_medical_history" model="ir.actions.act_window">
        <field name="name">Medical History</field>
        <field name="res_model">hr.employee.medical.history</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No medical history records found
            </p>
            <p>
                Track employee medical history, conditions, and treatments.
            </p>
        </field>
    </record>
    
    <!-- Vaccination Records Action -->
    <record id="action_vaccination_records" model="ir.actions.act_window">
        <field name="name">Vaccination Records</field>
        <field name="res_model">hr.employee.vaccination</field>
        <field name="view_mode">list,form,calendar,pivot</field>
        <field name="context">{'search_default_group_vaccine_type': 1}</field>
    </record>
    
    <!-- Health Checkups Action -->
    <record id="action_health_checkups" model="ir.actions.act_window">
        <field name="name">Health Checkups</field>
        <field name="res_model">hr.employee.health.checkup</field>
        <field name="view_mode">tree,form,calendar,pivot</field>
        <field name="context">{'search_default_upcoming': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule your first health checkup
            </p>
            <p>
                Track employee health checkups and medical examinations.
            </p>
        </field>
    </record>

    
    <!-- Health Reports Action -->
    <record id="action_health_reports" model="ir.actions.act_window">
        <field name="name">Health Reports</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_fitness': 1}</field>
    </record>
    
    <!-- Menu Items -->
    <!-- <menuitem id="menu_health_dashboard" 
              name="Dashboard" 
              parent="menu_hr_health_root" 
              action="action_health_dashboard" 
              sequence="1"/> -->
    
    <menuitem id="menu_medical_history" 
              name="Medical History" 
              parent="menu_hr_health_root" 
              action="action_medical_history" 
              sequence="10"/>
    
    <menuitem id="menu_vaccination_records" 
              name="Vaccinations" 
              parent="menu_hr_health_root" 
              action="action_vaccination_records" 
              sequence="20"/>
    
    <!-- <menuitem id="menu_health_checkups" 
              name="Health Checkups" 
              parent="menu_hr_health_root" 
              action="action_health_checkups" 
              sequence="30"/> -->
    
    <menuitem id="menu_health_reports" 
              name="Reports" 
              parent="menu_hr_health_root" 
              action="action_health_reports" 
              sequence="40"
              groups="hr.group_hr_manager"/>
    
    <!-- Configuration Menu -->
    <menuitem id="menu_health_configuration" 
              name="Configuration" 
              parent="menu_hr_health_root" 
              sequence="100"
              groups="hr.group_hr_manager"/>
</odoo>