<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Insurance Expiry Check -->
    <record id="ir_cron_check_insurance_expiry" model="ir.cron">
        <field name="name">Health: Check Insurance Expiry</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.check_insurance_expiry()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
    
    <!-- Vaccination Expiry Check -->
    <record id="ir_cron_check_vaccination_expiry" model="ir.cron">
        <field name="name">Health: Check Vaccination Expiry</field>
        <field name="model_id" ref="model_hr_employee_vaccination"/>
        <field name="state">code</field>
        <field name="code">model.check_vaccination_expiry()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="active" eval="True"/>
    </record>
    
    <!-- Health Checkup Reminder -->
    <record id="ir_cron_health_checkup_reminder" model="ir.cron">
        <field name="name">Health: Checkup Reminder</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.check_health_checkup_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
